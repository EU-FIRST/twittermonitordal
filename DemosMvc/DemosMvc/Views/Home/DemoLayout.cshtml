<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
@Styles.Render("~/Content/css/bootstrap2.3.1", "~/Content/css/demo")
<title>@ViewBag.Title</title>
</head>
<body>
<div class="container">
@if (ViewBag.IncludeDrillDown != null && (bool)ViewBag.IncludeDrillDown)
{
<div class="modal hide fade">
    <div class="modal-header">
	    <button type="button" class="close" data-dismiss="modal">&times;</button>
	    <h4>Tweets</h4>
    </div>
    <ul class="nav nav-tabs">
	    <li class="active"><a href="#pos-tweets" data-toggle="tab">Positive tweets</a></li>
	    <li><a href="#neg-tweets" data-toggle="tab">Negative tweets</a></li>
	    <li><a href="#nos-tweets" data-toggle="tab">Neutral tweets</a></li>
    </ul>
    <div class="tab-content">
	    <div id="pos-tweets" class="tab-pane active modal-body">
	    </div>
	    <div id="neg-tweets" class="tab-pane modal-body">
	    </div>
	    <div id="nos-tweets" class="tab-pane modal-body">
	    </div>
    </div>
    <div class="modal-footer">
	    <button class="btn" data-dismiss="modal">Close</button>
    </div>
</div>
}
<h1>@ViewBag.DemoTitle</h1>
<h2>@ViewBag.DemoSubtitle</h2>
@if (!string.IsNullOrEmpty(ViewBag.DemoDesc))
{
<div class="alert alert-info">
	<button type="button" class="close" data-dismiss="alert">&times;</button>
	@Html.Raw(ViewBag.DemoDesc)
</div>
}
<div class="loading-container">
<div class="loading-curtain"></div>
<img class="loading-img" src="~/Content/img/loading.gif">
<div class="loading-oops">Oops, something went wrong. Please try to reload the page.</div>
@RenderSection("Controls")
<div id="chart-container"></div>
</div>
<div id="copyright"><div>&copy; 2013 Sowa Labs</div></div>
</div>
@Scripts.Render("~/Scripts/jquery1.9.1", "~/Scripts/bootstrap2.3.1", "~/Scripts/highstock1.3.0", "~/Scripts/common")
@RenderSection("Scripts")
</body>
</html>